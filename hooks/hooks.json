{
  "description": "LCARS cognitive ergonomics: score responses, detect drift, inject corrections",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/lib/inject.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/lib/scorer.py --hook",
            "timeout": 10,
            "async": true
          }
        ]
      }
    ]
  }
}
